<application>


<name> vPredictor </name>


<dependencies>
</dependencies>


<module>
    <name> zynqGrabber </name>
    <parameters> </parameters>
    <node>icub-zynq</node>
</module>

<module>
    <name> vPreProcess </name>
    <parameters> --flipy --flipx --split_temporal --filter_spatial true --filter_temporal true --sf_time 0.05 --tf_time 0.05 </parameters>
    <node> icub23 </node>
</module>

<module>
    <name> COMtracker </name>
    <parameters> --events 100 --activation_thresh 70 --spatial_delta 3 --update_rate 100 --reset_time 1.0 --roi_width 80 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vPredictor </name>
    <parameters> --resetTime 2.0 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vFramerLite</name>
    <parameters> --displays "(/right (AE AE-INT))" </parameters>
    <node> localhost </node>
</module>

<module>
   <name> yarpview </name>
   <parameters>--name /view --x 658 --y 30 --w 608 --h 480 --synch </parameters>
   <node> localhost </node>
</module>


<connection>
  <from>/zynqGrabber/AE:o</from>
  <to>/vPreProcess/AE:i</to>
  <protocol> fast_tcp </protocol>
</connection>

<connection>
  <from>/vPreProcess/right:o</from>
  <to>/vFramer/right/AE:i</to>
  <protocol> udp </protocol>
</connection>

<connection>
  <from>/vPreProcess/right:o</from>
  <to>/COMtracker/AE:i</to>
  <protocol> udp </protocol>
</connection>

<connection>
  <from>/COMtracker/LAE:o</from>
  <to>/vFramer/right/LAE:i</to>
  <protocol> udp </protocol>
</connection>

<connection>
  <from>/COMtracker/LAE:o</from>
  <to>/vPredictor/LAE:i</to>
  <protocol> udp </protocol>
</connection>

<connection>
  <from>/vPredictor/LAE:o</from>
  <to>/vFramer/right/LAE:i</to>
  <protocol> udp </protocol>
</connection>

<connection>
  <from>/vFramer/right/image:o</from>
  <to>/view</to>
  <protocol> udp </protocol>
</connection>


</application>
